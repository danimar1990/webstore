<h2>Exibindo Cliente</h2>

<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>


<fieldset disabled>
  <div class="mb-3">
    <label class="form-label">Nome:</label>
    <input type="text" class="form-control" value="<%= @cliente.nome %>">
  </div>
  <div class="mb-3">
    <label class="form-label">CPF/CNPJ:</label>
    <input type="text" class="form-control" value="<%= @cliente.cpf_cnpj %>">
  </div>
</fieldset>

<%= link_to 'Editar', edit_cliente_path(@cliente), class: "btn btn-warning text-white" %>
<%= link_to 'Voltar', clientes_path, class: "btn btn-secondary text-white" %>
