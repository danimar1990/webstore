<%= form_with(model: fornecedor, local: true, :class => 'form-floating') do |form| %>
  <% if fornecedor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fornecedor.errors.count, "error") %> erros impediram que este fornecedor fosse salvo:</h2>

      <ul>
        <% fornecedor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :cpf_cnpj %>
    <%= form.text_field :cpf_cnpj %>
  </div>

  <div class="actions">
    <%= form.submit(:class => 'btn btn-success') %>
  </div>
<% end %>
