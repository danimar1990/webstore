<h2>Exibindo Produto</h2>

<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<fieldset disabled>
	<div class="row">
		<div class="col-md-6">
			<div class="mb-3">
				<label class="form-label">Nome:</label>
				<input type="text" class="form-control" value="<%= @produto.nome %>">
			</div>
		</div>
		<div class="col-md-6">
			<div class="mb-3">
				<label class="form-label">Pre√ßo de venda:</label>
				<input type="text" class="form-control" value="<%= number_to_currency(@produto.preco_venda, :precision => 2) %>">
			</div>
		</div>
	</div>
</fieldset>

<%= link_to 'Voltar', produtos_path, class: "btn btn-secondary text-white" %>
<%= link_to 'Editar', edit_produto_path(@produto), class: "btn btn-warning text-white" %>
