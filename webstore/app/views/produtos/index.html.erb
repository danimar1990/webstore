<p id="notice"><%= notice %></p>

<h2>Produtos</h2>

<table id="datatable" class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Preco venda</th>
      <th width="30%">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.preco_venda %></td>
		
        <td>
			<%= link_to 'Exibir', produto, class: "btn btn-info text-white" %>
			<%= link_to 'Editar', edit_produto_path(produto), class: "btn btn-warning text-white" %>
			<%= link_to 'Deletar', produto, class: "btn btn-danger text-white", method: :delete, data: { confirm: 'Tem certeza?' } %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Produto', new_produto_path, class: "btn btn-primary text-white" %>