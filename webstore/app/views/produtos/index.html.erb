<h2>Lista de Produtos</h2>
<p id="notice"><%= notice %></p>
<table id="datatable" class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Preço de venda</th>
      <th width>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td class="align-middle"><%= produto.try(:nome) %></td>
        <td class="align-middle"><%= number_to_currency(produto.try(:preco_venda), :precision => 2) %></td>
		
        <td>
			<%= link_to 'Exibir', produto, class: "btn btn-info text-white" %>
			<%= link_to 'Editar', edit_produto_path(produto), class: "btn btn-warning text-white" %>
			<%= link_to 'Excluir', produto, class: "btn btn-danger text-white", method: :delete, data: { confirm: 'Tem certeza?' } %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo Produto', new_produto_path, class: "btn btn-primary text-white" %>