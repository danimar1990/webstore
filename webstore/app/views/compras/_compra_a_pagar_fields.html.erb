<div class="nested-fields">
	<div class="row">
		<div class="col-md-3">
			<div class="form-floating field mb-3">
				<%= f.number_field :nro_parcela, {class: "form-control", min: "1", max: "12"} %>
				<%= f.label :nro_parcela %>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-floating field mb-3">
				<%= f.text_field :vlr_parcela, {class: "form-control", min: "0.00", max: "999999.00", step: "0.01"} %>
				<%= f.label :vlr_parcela %>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-floating field mb-3">
				<%= f.date_field :data_vencto, {class: "form-control"} %>
				<%= f.label :data_vencto %>
			</div>
		</div>
		<div class="col-md-1 mb-4">
			<%= link_to_remove_association "Remover", f, class: "badge bg-danger mt-3" %>
		</div>
	</div>
</div>