<div class="nested-fields">
	<div class="row">
		<div class="col-md-5">
			<div class="form-floating field mb-3">
	    	<%= f.collection_select(:produto_id, Produto.order(:nome), :id, :nome, options = {include_blank: true}, html_options = {class: "form-control"}) %>
	      <%= f.label :produto_id %>
			</div>
		</div>
		<div class="col-md-2">
			<div class="form-floating field mb-3">
				<%= f.number_field :quantidade, {class: "form-control", min: "0.00", max: "999999.00", step: "0.01"} %>
				<%= f.label :quantidade %>
			</div>
		</div>
		<div class="col-md-2">
			<div class="form-floating field mb-3">
				<%= f.text_field :vlr_unitario, {class: "form-control", min: "0.00", max: "999999.00", step: "0.01"} %>
				<%= f.label :vlr_unitario %>
			</div>
		</div>
		<div class="col-md-2">
			<div class="form-floating field mb-3">
				<%= f.text_field :vlr_total, {class: "form-control", min: "0.00", max: "999999.00", step: "0.01"} %>
				<%= f.label :vlr_total %>
			</div>
		</div>
		<div class="col-md-1 mb-4">
			<%= link_to_remove_association "Remover", f, class: "badge bg-danger mt-3" %>
		</div>
	</div>
</div>